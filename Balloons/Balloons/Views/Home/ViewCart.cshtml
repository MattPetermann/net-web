@{
    ViewBag.Header = "Balloon Purchase Form";
    ViewBag.SubHeader = "Submit order below.";
}

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Item</th>
            <th>Count</th>
            <th>Cost</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.FormResults.ContainsKey("redCheck") && ViewBag.FormResults["redCheck"] == "on" && ViewBag.FormResults["redCount"] != "0")
        {
            <tr>
                <td>Red Ballons</td>
                <td>@(String.Format("{0:#,###}", Convert.ToInt32(ViewBag.FormResults["redCount"])))</td>
                <td>$@(String.Format("{0:#,##0.00}", Convert.ToInt32(ViewBag.FormResults["redCount"]) * .99))</td>
            </tr>
        }

        @if (ViewBag.FormResults.ContainsKey("blueCheck") && ViewBag.FormResults["blueCheck"] == "on" && ViewBag.FormResults["blueCount"] != "0")
